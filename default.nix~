with import <nixpkgs> {};

stdenv.mkDerivation rec {
  name = "supplyHaskellFFIWithCMake-0.0.2";
  src = ./.  ;
  #buildDepends = [ cmake  ];
  nativeBuildInputs = [ cmake ];
  buildPhase = ''
    
    cmake ..
    cmake --build .
    
  '';
  
  installPhase = ''
    cp -r $src/ $out/
    chmod +x $out/
  '';
}
